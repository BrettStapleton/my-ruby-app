<h1>All Tags</h1>

<ul id="tags">
    <% @tags.each do |tag| %>
        <li>
            <%= link_to tag.name, tag_path(tag) %> - <%= link_to "Delete This Tag", tag_path(tag), method: :delete, data: {confirm: "Really delete this article?"} %>
        </li>
    <% end %>
</ul>

<br />
<%= link_to "Create a New Tag", new_tag_path, class: "new_tag" %><br />
<%= link_to "<< Back to Articles List", articles_path %>